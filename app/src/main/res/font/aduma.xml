<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<!--    Regular     none            -->
    <font
        app:fontStyle="normal"
        app:fontWeight="400"
        app:font="@font/aduma_regular"/>
<!--    Bold        bold            -->
    <font
        app:fontStyle="normal"
        app:fontWeight="700"
        app:font="@font/aduma_bold"/>
<!--    Light       italic          -->
    <font
        app:fontStyle="italic"
        app:fontWeight="400"
        app:font="@font/aduma_light"/>
<!--    Heavy       bold|italic     -->
    <font
        app:fontStyle="italic"
        app:fontWeight="700"
        app:font="@font/aduma_heavy"/>
</font-family>